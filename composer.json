{
    "name": "carlos-andres/nova-html-field",
    "description": "A Laravel Nova field for rendering HTML content with XSS protection",
    "keywords": ["laravel", "nova", "html", "field", "xss", "sanitization"],
    "license": "MIT",
    "authors": [
        {
            "name": "Calo",
            "email": "carlos-andres@users.noreply.github.com"
        }
    ],
    "require": {
        "php": "^8.1",
        "ezyang/htmlpurifier": "^4.16"
    },
    "require-dev": {
        "larastan/larastan": "^2.9|^3.0",
        "laravel/pint": "^1.18",
        "orchestra/testbench": "^8.0|^9.0",
        "phpunit/phpunit": "^10.5|^11.0"
    },
    "suggest": {
        "laravel/nova": "Required to use this field (^4.0|^5.0)"
    },
    "autoload": {
        "psr-4": {
            "Vendor\\NovaHtmlField\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Vendor\\NovaHtmlField\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html coverage",
        "lint": "pint --test",
        "lint:fix": "pint",
        "analyse": "phpstan analyse"
    },
    "extra": {
        "laravel": {
            "providers": [
                "Vendor\\NovaHtmlField\\FieldServiceProvider"
            ]
        }
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
